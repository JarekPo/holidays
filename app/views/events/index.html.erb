
<h1 class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4">Holiday Requests</h1>

<%= link_to "New Holiday Request", new_event_path, class:"col-md-3 col-lg-2 col-xl-4 mx-auto mb-4" %>

<div id="events">
  <% @events.each do |event| %>
    <% if event.user == current_user %>
      <hr class="container" />
      <%= render event %>
      <p class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4">
        <%= link_to "Show This Holiday Request", event %>
      </p>
    <% end %>
  <% end %>

  <% @events.each do |event| %>
    <% if current_user.admin == true %>
      <hr class="container" />
      <%= render event %>
      <p class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4">
        <%= link_to "Show This Holiday Request", event %>
      </p>
    <% end %>
  <% end %>
</div>




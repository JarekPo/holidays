<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4">
    <%= form.label :name, style: "display: block", class:"form-label" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4">
    <%= form.label :notes, style: "display: block", class:"form-label" %>
    <%= form.text_area :notes, class:"form-control" %>
  </div>

  <div class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4">
    <%= form.label :start_date, style: "display: block", class:"form-label" %>
    <%= form.datetime_field :start_date, class:"form-control" %>
  </div>

  <div class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4">
    <%= form.label :end_date, style: "display: block", class:"form-label" %>
    <%= form.datetime_field :end_date, class:"form-control" %>
  </div>

  <div class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4">
    <%= form.text_field :user_id, id: :events_user_id, value: current_user.id, type: :hidden  %>
  </div>

  <div class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4">
    <%= form.submit "Submit", class:"btn btn-sm-primary" %>
  </div>
<% end %>

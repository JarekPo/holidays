<div id="<%= dom_id request %>">
  <p>
    <strong>Employee Name:</strong>
    <%= request.title %>
  </p>

  <p>
    <strong>Notes:</strong>
    <%= request.description %>
  </p>

  <p>
    <strong>Start date (The first day the employee will not be present):</strong>
    <%= request.start_date %>
  </p>

  <p>
    <strong>End date (The last day the employee will not be present):</strong>
    <%= request.end_date %>
  </p>

  <p>
    <strong>Holiday added on: </strong>
    <%= request.created_at %>
  </p>
</div>

<% if user_signed_in? %>
  <% if current_user.admin == true %>
    <h1 class="col-md-10 col-lg-8 col-xl-6 mx-auto mb-4">New Holiday</h1>
    <%= render "form", request: @request %>
    <br>
    <div class="col-md-10 col-lg-8 col-xl-6 mx-auto mb-4 links-secondary">
      <%= link_to "Back To Approved Holidays", requests_path %>
    </div>
  <% else %>
    <div class="container links-secondary min-vh">
      <p>Unauthorized access</p>		
      <%= link_to "Back", :back %>
		</div>
  <% end %>
<% end %>
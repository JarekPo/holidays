
<h1 class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4">Approved Holidays</h1>

<%= link_to "Add Holiday To Calendar", new_request_path, class:"col-md-3 col-lg-2 col-xl-4 mx-auto mb-4" %>

<div id="requests">
  <% @requests.each do |request| %>
    <hr class="container" />
    <%= render request %>
    <p  class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4">
      <%= link_to "Show This Holiday", request %>
    </p>
  <% end %>
</div>



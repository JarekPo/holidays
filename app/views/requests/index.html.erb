
<h1 class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4">Approved Holidays</h1>
<span class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4 links-secondary">
  <%= link_to "Add Holiday To Calendar", new_request_path %>
</span>
<div id="requests">
  <% @requests.each do |request| %>
    <hr class="container" />
    <%= render request %>
    <p  class="col-md-3 col-lg-2 col-xl-4 mx-auto mb-4 links-secondary">
      <%= link_to "Show This Holiday", request %>
    </p><br/>
  <% end %>
</div>



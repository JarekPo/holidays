<h2 class="col-md-10 col-lg-8 col-xl-6 mx-auto mb-4">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field col-md-10 col-lg-8 col-xl-6 mx-auto mb-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions col-md-10 col-lg-8 col-xl-6 mx-auto mb-4">
    <%= f.submit "Send me reset password instructions", class:"btn btn-sm-primary" %>
  </div>
<% end %>
<div class="col-md-10 col-lg-8 col-xl-6 mx-auto mb-4 links-secondary">
  <%= render "devise/shared/links" %>
</div>